{
    "manifest_version": 2,
    "name": "Capstone",
    "version": "0.5",
    "permissions": [
        "http://*/",
        "https://*/"
    ],
    "description": "Blocks and redirects from websites based on a list sent to the extension",
    "content_scripts": [{
        "js": ["script.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "background": {
        "scripts": ["script.js"],
        "persistent": false
    }
}